div#recomend-tag
    @extend $row
    margin 0 auto
    margin-top 20px
    flex-direction column
    h2
        text-align left
        small 
            a
                color gray-01
                text-decoration none    
                SourceSansPro(regular)
                font-size 14px
    ul.recomend-tags
        display flex
        flex-direction row
        flex-wrap wrap
        list-style none
        margin 0
        padding 0
        width 100%
        margin-top 15px
        li.recomend-item
            display flex
            width 19%
            margin 0
            padding 0
            position relative
            padding 5px 3%
            margin-bottom 15px
            @extend $justify-center
            text-align center
            a
                display block
                btn-border(cor-01);
                width 100%
                padding 12px
                text-decoration none
                font-size 18px
                white-space nowrap
                text-overflow ellipsis
                display block
                overflow hidden


