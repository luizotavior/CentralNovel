ul.pagination
    display flex
    flex-direction row
    padding 0px
    margin 10px
    list-style none
    flex-wrap: wrap;
    margin 0 auto
    margin-top 20px
    li.active,
    li:first-child,
    li:last-child
        color white
        background-color cor-01
    li
        border-radius 100px
        margin-left 4px
        margin-right 4px
        margin-top 10px
        width 30px
        height 30px
        box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.37);
        display flex
        @extend $justify-center
        @extend $vertical-align-middle
        a
            btn()
            padding 10px
            border-radius 100px
            color black
        &:hover
            background-color cor-02
            color white