div#legado
    @extend $row-fluid
    margin 0 
    padding 0
    margin-top 50px
    border-radius 0px
    flex-direction row
    text-align center
    flex-wrap wrap
    padding-top 30px
    padding-bottom 30px
    @extend $justify-center
    @extend $vertical-align-middle
    div.texto
        col(4)
        display flex
        flex-direction column
        text-align center
        @extend $justify-center
        @extend $vertical-align-middle
        p
            padding 0
            margin 0
            Roboto(regular)
            font-size 40px
            text-transform uppercase
            font-weight 100
            SourceSansPro(light)
            &.destaque
                SourceSansPro(regular)
                font-weight 400
        a.btn
            btn-padrao(transparent)
            text-decoration none
            width 180px
            color black
            SourceSansPro(light)
            margin 0 auto
            padding 10px 10px
            border 1px solid rgba(0, 0, 0, 0.37);
            border-radius 8px
            text-transform uppercase
            box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.37);
            margin-top 20px
            &:hover
                color cor-01

    div.livro
        col(5)
        img 
            width 100%


/* Menor que 960 */
@media (max-width: 959px)
    div#legado
        div.texto
            p
                font-size 28px
/* Tablet Portrait ao padr√£o 960 */
@media (min-width: 768px) and (max-width: 959px){}
/* Todos tamanhos de mobile */
@media (max-width: 767px)
    div#legado
        flex-direction column-reverse
        mq-justify(center)
        flex-wrap wrap
        div.texto
            col(12)
            p
                font-size 12px
        div.livro
            col(8)
/* Mobile em landscape a tablet Portrait */
@media (min-width: 480px) and (max-width: 767px) {}
