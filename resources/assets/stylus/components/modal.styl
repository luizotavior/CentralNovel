modal()
    display:none;
    position:fixed;
    left:0;
    top:0;
    width 100%
    height 100%
    z-index:9900;
    .fundo
        position fixed
        left 0
        top 0
        z-index:9000
        width 100%
        height 100%
        background-color rgba(0,0,0,.8)
    div.container
        position absolute
        width 100%
        height 100%
        display flex
        flex-direction column
        @extend $vertical-align-middle
        @extend $justify-center
        div.content
            z-index:9002;
            display flex
            position relative
            flex-direction column
            width 300px
            height 150px
            background-color white;
            padding 0px
            border-radius 5px
            .fechar
                position absolute
                top 3px
                right 3px
                text-align right
                i.fa-close
                    color black
                &:hover
                    i
                        color cor-02

