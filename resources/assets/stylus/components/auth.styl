/* Todos tamanhos de mobile */
@media (max-width: 767px)
    main#auth
        div.container
            background-color cor-02
            div#informacoes
                -webkit-transform: skew(-6deg) translateX(-30px);
                -ms-transform: skew(-6deg) translateX(-30px);
                transform: skew(-6deg) translateX(-30px);
                div.content
                    img.logo
                        margin-left 80px
                        width 125px
