/* Mobile em landscape a tablet Portrait */
@media (min-width: 480px) and (max-width: 767px) {}
/* Mobile em portrait a mobile em landscape */
@media (max-width: 479px)
    main#auth
        div.container
            min-height 290px
            height 100%
            border-radius 0px 0px 0px 0px
            div#informacoes
                display none
            div#painel
                display flex
                col(12)
                div.formulario
                    display flex
                    min-width 90%

