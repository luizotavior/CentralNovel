main#alianca
    @extend $row
    margin 0 auto
    div#principal
        col(12)
        flex-direction column
        padding-top 30px
        padding-bottom 50px
        h1
            color cor-01
            SourceSansPro(regular)
            font-size 40px
            text-text-transform uppercase
            text-align center
        hr
            height 3px
            color cor-01
            background-color cor-01
            col(2)
            margin 0 auto
            margin-top 5px
        div.alianca-logo
            display flex
            width 200px
            height 200px
            margin 0 auto
            margin-top 40px
            margin-bottom 40px
            img
                width 100%
                height 100%
        div.sobre
            display flex
            flex-direction row
            flex-wrap wrap
            margin-top 40px
            margin-bottom 40px
            div.esquerdo
                col(6)
                @extend $justify-center
                @extend $vertical-align-middle
                margin-top 10px
                margin-bottom 10px
                div.linha
                    hr
                        height 1px
                        color cor-01
                        background-color cor-01
                        width 30%
                        margin-top 4px
                        text-align left
                p
                    margin 0 auto
                    margin-top 20px
                    width 55%
                    font-size 28px
                    text-align left
                    background: -webkit-linear-gradient(cor-01, #402A09);
                    -webkit-background-clip: text;
                    -webkit-text-fill-color: transparent;
            div.direito
                col(6)
                @extend $justify-center
                @extend $vertical-align-middle
                margin-top 10px
                margin-bottom 10px
                p
                    PermanentMaker(regular)
                    text-transform uppercase
                    margin 0 auto
                    width 50%
                    font-size 48px
                    text-align right
            div.inferior
                col(12)
                @extend $justify-center
                @extend $vertical-align-middle
                margin-top 10px
                margin-bottom 10px
                h2
                    color cor-01
                    SourceSansPro(regular)
                    font-size 40px
                    text-text-transform uppercase
                    text-align center
                hr
                    height 3px
                    color cor-01
                    background-color cor-01
                    col(2)
                    margin 0 auto
                    margin-top 5px
                p
                    SourceSansPro(light)
                    margin 0 auto
                    margin-top 20px
                    width 75%
                    font-size 24px
                    text-align left
        div.membros
            col(12)
            display flex
            flex-direction column
            h2
                SourceSansPro(regular)
                font-size 40px
                text-text-transform uppercase
                text-align center
            hr
                height 3px
                color cor-01
                background-color cor-01
                col(3)
                margin 0 auto
            div.lista-membros
                col(10)
                display flex
                flex-direction row
                flex-wrap wrap
                margin 0 auto
                margin-top 30px
                @extends $justify-between
                div.membro
                    width 25%
                    height 100px
                    margin 20px 0px 20px 0px
                    text-align center
                    img
                        height 100%
                    span
                        display none
            a.btn
                btn-padrao(transparent)
                text-decoration none
                width 130px
                color black
                SourceSansPro(light)
                margin 0 auto
                padding 10px 10px
                border 1px solid rgba(0, 0, 0, 0.37);
                border-radius 8px
                text-transform uppercase
                box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.37);
                margin-top 50px
                &:hover
                    color cor-01



/* Menor que 960 */
@media (max-width: 959px){}

/* Tablet Portrait ao padr√£o 960 */
@media (min-width: 768px) and (max-width: 959px) {}
/* Todos tamanhos de mobile */
@media (max-width: 767px)
    main#alianca
        div#principal
            div.sobre
                flex-direction column
                text-align center
                div.esquerdo
                    col(12)
                    p
                        text-align center
                div.direito
                    col(12)
                    @extend $justify-right
                    text-align right !important
                    p
                        text-align center
            div.membros
                div.lista-membros
                    div.membro
                        width 33%
/* Mobile em landscape a tablet Portrait */
@media (min-width: 480px) and (max-width: 767px){}
/* Mobile em portrait a mobile em landscape */
@media (max-width: 479px)
    main#alianca
        div#principal
            div.membros
                div.lista-membros
                    div.membro
                        width 50%